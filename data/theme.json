{
  "colors": {
    "default": {
      "theme_color": {
        "primary": "#000000",
        "secondary": "#FFFFFF",
        "body": "#FFFFFF",
        "border": "#D1D1D1",
        "theme_light": "#F4F4F4",
        "theme_dark": "#1C1C1C"
      },
      "text_color": {
        "default": "#000000",
        "dark": "#1C1C1C",
        "light": "#7D7D7D"
      }
    },
    "darkmode": {
      "theme_color": {
        "primary": "#FFFFFF",
        "secondary": "#000000",
        "body": "#1A1A1A",
        "border": "#3A3A3A",
        "theme_light": "#D1D1D1",
        "theme_dark": "#0A0A0A"
      },
      "text_color": {
        "default": "#000000",
        "dark": "#E6E6E6",
        "light": "#B0BEC5"
      }
    }
  },
  "fonts": {
    "font_family": {
      "primary": "Montserrat:wght@600;700",
      "primary_type": "sans-serif",
      "secondary": "Open Sans:wght@400;600",
      "secondary_type": "sans-serif"
    },
    "font_size": {
      "base": "18",
      "scale": "1.25"
    }
  },
  "global_styles": {
    "body": {
      "background_color": "#FFFFFF",
      "color": "#000000"
    },
    "header": {
      "background_color": "#000000",
      "color": "#FFFFFF",
      "border_bottom": "1px solid #D1D1D1"
    },
    "footer": {
      "background_color": "#000000",
      "color": "#FFFFFF",
      "border_top": "1px solid #D1D1D1"
    },
    "button": {
      "background_color": "#000000",
      "color": "#FFFFFF",
      "hover_background_color": "#1C1C1C",
      "border": "none"
    },
    "button_secondary": {
      "background_color": "#FFFFFF",
      "color": "#000000",
      "hover_background_color": "#F4F4F4",
      "border": "1px solid #000000"
    },
    "link": {
      "color": "#000000",
      "hover_color": "#1C1C1C"
    }
  }
}
