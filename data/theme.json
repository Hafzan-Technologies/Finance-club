{
  "colors": {
    "default": {
      "theme_color": {
        "primary": "#005EB8",
        "body": "#FFFFFF",
        "border": "#E6E6E6",
        "theme_light": "#F1F3F5",
        "theme_dark": "#004B87"
      },
      "text_color": {
        "default": "#003D5B",
        "dark": "#1C1C1C",
        "light": "#5B5B5B"
      }
    },
    "darkmode": {
      "theme_color": {
        "primary": "#005EB8",
        "body": "#1A1A1A",
        "border": "#3A3A3A",
        "theme_light": "#004B87",
        "theme_dark": "#0A0A0A"
      },
      "text_color": {
        "default": "#FFFFFF",
        "dark": "#E6E6E6",
        "light": "#B0BEC5"
      }
    }
  },
  "fonts": {
    "font_family": {
      "primary": "Roboto:wght@500;700",
      "primary_type": "sans-serif",
      "secondary": "Lato:wght@400;600",
      "secondary_type": "sans-serif"
    },
    "font_size": {
      "base": "18",
      "scale": "1.25"
    }
  },
  "global_styles": {
    "body": {
      "background_color": "#FFFFFF",
      "color": "#003D5B"
    },
    "header": {
      "background_color": "#005EB8",
      "color": "#FFFFFF",
      "border_bottom": "1px solid #E6E6E6"
    },
    "footer": {
      "background_color": "#005EB8",
      "color": "#FFFFFF",
      "border_top": "1px solid #E6E6E6"
    },
    "button": {
      "background_color": "#005EB8",
      "color": "#FFFFFF",
      "hover_background_color": "#004B87",
      "border": "none"
    },
    "link": {
      "color": "#005EB8",
      "hover_color": "#004B87"
    }
  }
}
