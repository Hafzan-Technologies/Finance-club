{
  "colors": {
    "default": {
      "theme_color": {
        "primary": "#2C3E50",  // Dark blue-grey for a professional look
        "body": "#F9F9F9",     // Light grey for a clean and modern feel
        "border": "#BDC3C7",   // Soft grey for minimal contrast
        "theme_light": "#ECF0F1", // Subtle light grey for soft elements
        "theme_dark": "#34495E"  // Darker grey-blue for depth
      },
      "text_color": {
        "default": "#2C3E50",  // Dark blue-grey for text for easy readability
        "dark": "#1B1B1B",     // Almost black for emphasis text
        "light": "#7F8C8D"     // Muted grey for secondary or subtle text
      }
    },
    "darkmode": {
      "theme_color": {
        "primary": "#1A1A1A",  // Dark grey for a sleek dark mode
