      "secondary": "Roboto:wght@400;700",  // Clean and widely accepted serif for secondary
      "secondary_type": "sans-serif"
    },
    "font_size": {
      "base": "16",  // Slightly smaller for a more refined feel
      "scale": "1.25"  // More subtle scaling for better readability
